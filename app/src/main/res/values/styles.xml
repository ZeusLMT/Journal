<resources>

    <style name="AppTheme.PastelLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pastelLight_Primary</item>
        <item name="colorPrimaryDark">@color/pastelLight_PrimaryDark</item>
        <item name="colorAccent">@color/pastelLight_Accent</item>
        <item name="android:colorBackground">@color/pastelLight_Background</item>
        <item name="android:navigationBarColor">@color/pastelLight_PrimaryDark</item>
    </style>

    <style name="AppTheme.PastelDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/pastelDark_Primary</item>
        <item name="colorPrimaryDark">@color/pastelDark_PrimaryDark</item>
        <item name="colorAccent">@color/pastelDark_Accent</item>
        <item name="android:navigationBarColor">@color/pastelDark_PrimaryDark</item>
        <item name="android:colorBackground">@color/pastelDark_Background</item>
    </style>

    <style name="AppTheme.PastelLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#59000000</item>
    </style>

    <style name="AppTheme.PastelLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PastelLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PastelDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#59000000</item>
    </style>

</resources>
