<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PastelLight" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/pastelLight_Primary</item>
        <item name="colorPrimaryDark">@color/pastelLight_PrimaryDark</item>
        <item name="colorAccent">@color/pastelLight_Accent</item>
        <item name="android:colorBackground">@color/pastelLight_Background</item>
        <item name="android:navigationBarColor">@color/pastelLight_Primary</item>
        <item name="android:statusBarColor">@color/pastelLight_Primary</item>
    </style>

</resources>
